<% include('../layouts/header.ejs') %>

<% if (user) { %>
  <h1>Welcome, <%= user.name %></h1>

  <table width="50%">
      <tr>
          <td><img src="images/<%= user.image %>" width="200px" height="200px" alt="<%= user.name %>"></td>
      </tr>
      <tr>
          <td>Email</td>
          <td><%= user.email %></td>
      </tr>
      <tr>
          <td>Mobile</td>
          <td><%= user.mobile %></td>
      </tr>
      <tr>
          <td>Verified</td>
          <td><% if(user.is_verified == 1){
            %>
                <p>True</p>
            <%
          }
          %></td>
      </tr>
  </table>

  <a href="/edit?id=<%= user._id %>">Edit</a>
  <br>
  <a href="/logout">Logout</a>
<% } else { %>
  <h2>User not found</h2>
<% } %>

<% include('../layouts/footer.ejs') %>
